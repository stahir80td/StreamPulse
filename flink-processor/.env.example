# Kafka Configuration (Upstash)
KAFKA_BOOTSTRAP_SERVERS=your-kafka-endpoint.upstash.io:9092
KAFKA_USERNAME=your-username
KAFKA_PASSWORD=your-password
KAFKA_TOPIC=content-downloads
KAFKA_GROUP_ID=flink-processor
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=SCRAM-SHA-256

# PostgreSQL Configuration (Neon)
PG_HOST=your-db.neon.tech
PG_PORT=5432
PG_DATABASE=streampulse
PG_USER=your-username
PG_PASSWORD=your-password
PG_SSLMODE=require

# Flink Configuration
FLINK_PARALLELISM=1
FLINK_CHECKPOINT_INTERVAL=60000
FLINK_CHECKPOINT_DIR=file:///tmp/flink-checkpoints

# Schema
SCHEMA_PATH=../schemas/event.avsc